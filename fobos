rule_4 = FoBiS.py build -mode fundal-void-omp-ifx -t src/tests/laplace/fundal_laplace_dev_routine.F90 -s src/

[rule-build-laplace-baseline-gnu]
help   = Build laplace test with GNU (without pragmas)
